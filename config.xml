<?xml version='1.0' encoding='utf-8'?>
<widget id="com.buggetbirl.shenzhenmtr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"  android-versionCode="1">
    <name>ShenZhen MTR</name>
    <description>
        ShenZhen MTR
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
       Bug Birl
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	 <icon src="icon.png"/>
	  
    <platform name="android">
     
        <allow-intent href="market:*" />
		
		    <icon src="www/res/icon/android/icon-36-ldpi.png" density="ldpi"/>
			<icon src="www/res/icon/android/icon-48-mdpi.png" density="mdpi"/>
			<icon src="www/res/icon/android/icon-72-hdpi.png" density="hdpi"/>
			<icon src="www/res/icon/android/icon-96-xhdpi.png" density="xhdpi"/>
			<icon src="www/res/icon/android/icon-144-xxhdpi.png" density="xxhdpi"/>
			<icon src="www/res/icon/android/icon-192-xxxhdpi.png" density="xxxhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
	
	 
	  <platform name="wp8">

	  </platform>
	  <platform name="windows">
	   </platform>

	

	<preference name="android-build-tool" value="gradle" />
	<preference name="phonegap-version" value="cli-8.0.0" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="loadUrlTimeoutValue" value="700000" />
	<preference name="fullscreen" value="true" />
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-admobpro" spec="2.37.2" />
	<plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />
	<plugin name="cordova-plugin-statusbar" spec="1.0.1" />
	<plugin name="cordova-plugin-x-socialsharing" spec="5.4.4" />
	<plugin name="cordova-plugin-network-information" />
</widget>
